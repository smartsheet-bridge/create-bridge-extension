{
  "name": "create-bridge-extension",
  "version": "0.0.0-development.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "configs/*"
  ],
  "scripts": {
    "start": "lerna run start",
    "lint": "lerna run lint",
    "test": "jest --runInBand",
    "test:watch": "jest --watchAll --no-coverage",
    "build": "lerna run clean && tsc --build tsconfig.build.json",
    "build:watch": "tsc --build tsconfig.build.json --watch ",
    "clean": "lerna run clean && rm -rf node_modules",
    "release": "yarn workspaces run release"
  },
  "devDependencies": {
    "@npm/types": "^1.0.1",
    "@semantic-release/gitlab": "^6.0.5",
    "@types/jest": "^26.0.15",
    "@types/node": "^13.5.1",
    "jest": "^26.6.3",
    "lerna": "^3.10.5",
    "prettier": "^2.1.2",
    "prettier-tslint": "^0.4.2",
    "semantic-release": "^17.1.2",
    "semantic-release-monorepo": "^7.0.3",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^4.0.5"
  }
}
