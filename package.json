{
  "name": "create-bridge-extension",
  "version": "0.0.0-development.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "configs/*"
  ],
  "scripts": {
    "start": "lerna run start",
    "lint": "eslint . -c .eslintrc.json  --ext .ts",
    "test": "jest --runInBand",
    "test:watch": "jest --watchAll --no-coverage",
    "build": "lerna run clean && tsc --build tsconfig.build.json",
    "build:watch": "tsc --build tsconfig.build.json --watch ",
    "clean": "lerna run clean && rm -rf node_modules",
    "release": "yarn workspaces run release"
  },
  "devDependencies": {
    "@npm/types": "^1.0.1",
    "@semantic-release/gitlab": "^6.0.5",
    "@types/jest": "^26.0.15",
    "@types/node": "^13.5.1",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.7",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "lerna": "^3.10.5",
    "prettier": "^2.1.2",
    "prettier-eslint": "^11.0.0",
    "semantic-release": "^17.1.2",
    "semantic-release-monorepo": "^7.0.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  }
}
