{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "removeComments": false
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": [
    "lib",
    "node_modules",
    "**/__*__/**",
    "./src/**/*.spec.tsx",
    "./src/**/*.spec.ts"
  ]
}
